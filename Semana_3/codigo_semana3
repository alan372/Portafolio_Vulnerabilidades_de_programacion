*Ejemplo 1:

#include<iostream>
#include<fstream>
using namespace std;
int main()
{
	int nump, x, cantp, prec, cuenta;
	int total = 0;
	string prod;
	cout << "cuantos prodctos vas a comprar " << endl;
	cin >> nump;
	for (x = 1; x <= nump; x++)
	{
		cout << "ingresa tu producto " << endl;
		cin >> prod;
		cout << " cantidad a comprar " << endl;
		cin >> cantp; cout << " Precio " << endl;
		cin >> prec;
		cuenta = cantp * prec;
		cout << " el total a pagar de " << prod << " es : $" << cuenta <<
			endl;
		total = total + cuenta;
	}
	cout << "tu total a pagar es : $" << total << endl;
}
 
 
Ejercicio 1:

#include <iostream>
#include <fstream>
using namespace std;
int main()
{
	int num, numf, x;
	cout << "Introduce un numero para saber si es un Numero PAR o IMPAR "
		<< endl << endl;
	cin >> numf;
	for (num = 1; num <= numf; num++)
	{
		x = num % 2;
		if (x == 0)
			cout << endl << "El Numero " << num << " Es un Numero PAR "
			<< endl;
		else
			cout << endl << "El Numero " << num << " Es un Numero IMPAR "
			<< endl;
	}
	return 0;
}

Ejercicio 2:

#include <iostream>
#include<fstream>
using namespace std;
int main()
{
    int cal;
    cout << "Â¿ Cual es tu calificacion ? " << endl << endl;
    cin >> cal;
    if (cal > 10 or cal < 0)
        cout << " tu calificacion no es valida, recuerda que tu calificacion tiene como valor maximo 10 y valor minimo 0" << endl;
    else if (cal == 10)
        cout << endl << " Excelente" << endl;
    else if (cal == 9)
        cout << endl << "Muy Bien" << endl;
    else if (cal == 8)
        cout << endl << " Bien" << endl;
    else if (cal == 7)
        cout << endl << " Regular" << endl;
    else if (cal >= 0 or cal <= 6)
        cout << endl << "No Acreditado" << endl;
}

Ejercicio 3:
#include <iostream>
#include <fstream>
using namespace std;
int main()
{
	
	int num, x;
	cout << "Introduce un numero del 0 al 10 para saber si es un Numero PAR o IMPAR " << endl << endl;
	cin >> num;
	if (num == 0) { cout << endl << "El Numero " << num << " Es un numero Par" << endl; }
	if (num == 1) { cout << endl << "El Numero " << num << " No es un numero Par" << endl; }
	if (num == 2) { cout << endl << "El Numero " << num << " Es un numero Par" << endl; }
	if (num == 3) { cout << endl << "El Numero " << num << " No es un numero Par" << endl; }
	if (num == 4) { cout << endl << "El Numero " << num << " Es un numero Par" << endl; }
	if (num == 5) { cout << endl << "El Numero " << num << " No es un numero Par" << endl; }
	if (num == 6) { cout << endl << "El Numero " << num << " Es un numero Par" << endl; }
	if (num == 7) { cout << endl << "El Numero " << num << " No es un numero Par" << endl; }
	if (num == 8) { cout << endl << "El Numero " << num << " Es un numero Par" << endl; }
	if (num == 9) { cout << endl << "El Numero " << num << " No es un numero Par" << endl; }
	if (num == 10) { cout << endl << "El Numero " << num << " Es un numero Par" << endl; }
}
